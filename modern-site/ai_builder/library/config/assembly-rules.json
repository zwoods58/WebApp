{
  "assemblyRules": {
    "layoutOrder": {
      "standard": [
        "header",
        "hero",
        "features",
        "content-sections",
        "testimonial",
        "gallery",
        "contact-form",
        "footer"
      ],
      "ecommerce": [
        "header",
        "hero",
        "product-grid",
        "features",
        "testimonial",
        "contact-form",
        "footer"
      ],
      "service": [
        "header",
        "hero",
        "features",
        "service-list",
        "testimonial",
        "contact-form",
        "footer"
      ],
      "portfolio": [
        "header",
        "hero",
        "portfolio",
        "about",
        "testimonial",
        "contact-form",
        "footer"
      ]
    },
    "requiredBlocks": {
      "all": ["header", "hero", "footer"],
      "ecommerce": ["header", "hero", "product-grid", "footer"],
      "restaurant": ["header", "hero", "menu", "footer"],
      "service": ["header", "hero", "features", "footer"],
      "portfolio": ["header", "hero", "portfolio", "footer"]
    },
    "blockDependencies": {
      "testimonial": {
        "recommendedAfter": ["features", "services", "products"],
        "minCount": 3,
        "maxCount": 6
      },
      "gallery": {
        "recommendedAfter": ["hero", "features"],
        "minCount": 6,
        "maxCount": 12
      },
      "contact-form": {
        "recommendedPosition": "bottom",
        "requiredBefore": "footer"
      }
    },
    "industrySpecific": {
      "restaurant": {
        "required": ["menu", "reservation-form"],
        "recommended": ["chef-highlight", "dish-gallery", "location-map"],
        "order": ["hero", "menu", "chef-highlight", "dish-gallery", "testimonial", "reservation-form", "location-map"]
      },
      "ecommerce": {
        "required": ["product-grid"],
        "recommended": ["product-filters", "cart-widget", "review-carousel"],
        "order": ["hero", "product-grid", "features", "review-carousel", "testimonial"]
      },
      "saas": {
        "required": ["pricing-table"],
        "recommended": ["signup-form", "feature-comparison", "integration-logos"],
        "order": ["hero", "features", "pricing-table", "testimonial", "signup-form"]
      },
      "beauty-salon": {
        "required": ["service-list", "appointment-form"],
        "recommended": ["stylist-profile", "before-after-gallery"],
        "order": ["hero", "service-list", "stylist-profile", "before-after-gallery", "testimonial", "appointment-form"]
      },
      "fitness": {
        "required": ["membership-plans", "class-schedule"],
        "recommended": ["trainer-profile", "transformation-gallery"],
        "order": ["hero", "membership-plans", "class-schedule", "trainer-profile", "transformation-gallery", "testimonial"]
      },
      "medical": {
        "required": ["services-overview", "appointment-booking"],
        "recommended": ["doctor-profile", "insurance-info"],
        "order": ["hero", "services-overview", "doctor-profile", "insurance-info", "testimonial", "appointment-booking"]
      },
      "real-estate": {
        "required": ["property-grid"],
        "recommended": ["property-card", "mortgage-calculator", "agent-profile"],
        "order": ["hero", "property-grid", "agent-profile", "mortgage-calculator", "testimonial"]
      }
    },
    "responsiveBreakpoints": {
      "mobile": "640px",
      "tablet": "768px",
      "desktop": "1024px",
      "wide": "1280px"
    },
    "spacing": {
      "sectionPadding": "py-20",
      "containerPadding": "px-4",
      "elementGap": "gap-8"
    },
    "colorSchemes": {
      "restaurant": {
        "primary": "teal-600",
        "secondary": "orange-500",
        "accent": "amber-500"
      },
      "ecommerce": {
        "primary": "blue-600",
        "secondary": "indigo-600",
        "accent": "purple-500"
      },
      "medical": {
        "primary": "blue-600",
        "secondary": "teal-600",
        "accent": "cyan-500"
      },
      "beauty": {
        "primary": "pink-600",
        "secondary": "rose-600",
        "accent": "fuchsia-500"
      },
      "fitness": {
        "primary": "red-600",
        "secondary": "orange-600",
        "accent": "amber-500"
      }
    }
  }
}

