{
  "blockParameters": {
    "hero": {
      "required": ["heroTitle", "heroSubtitle"],
      "optional": ["heroImage", "heroAlt", "ctaPrimaryText", "ctaPrimaryLink", "ctaSecondaryText", "ctaSecondaryLink", "backgroundColor", "primaryColor", "overlayOpacity", "showScrollIndicator"],
      "defaults": {
        "ctaPrimaryText": "Get Started",
        "ctaPrimaryLink": "#contact",
        "ctaSecondaryText": "Learn More",
        "ctaSecondaryLink": "#services",
        "backgroundColor": "bg-gradient-to-br from-teal-50 to-blue-50",
        "primaryColor": "teal-600",
        "overlayOpacity": "from-black/80 via-black/60 to-black/40",
        "showScrollIndicator": true
      }
    },
    "menu": {
      "required": ["menuItems"],
      "optional": ["sectionTitle", "sectionDescription", "columns", "primaryColor"],
      "defaults": {
        "sectionTitle": "Our Menu",
        "sectionDescription": "Delicious dishes crafted with love",
        "columns": "md:grid-cols-2 lg:grid-cols-3",
        "primaryColor": "teal-600"
      },
      "menuItemStructure": {
        "required": ["itemName", "itemImage", "price", "description", "category"],
        "optional": ["isVegetarian", "isVegan", "isGlutenFree", "isSpicy"]
      }
    },
    "features": {
      "required": ["features"],
      "optional": ["sectionTitle", "sectionDescription", "columns", "primaryColor"],
      "defaults": {
        "sectionTitle": "Our Services",
        "columns": "md:grid-cols-3",
        "primaryColor": "teal-600"
      },
      "featureStructure": {
        "required": ["title", "description"],
        "optional": ["icon", "image", "link"]
      }
    },
    "testimonial": {
      "required": ["testimonials"],
      "optional": ["sectionTitle", "sectionDescription", "columns", "showRating"],
      "defaults": {
        "sectionTitle": "What Our Clients Say",
        "columns": "md:grid-cols-3",
        "showRating": true
      },
      "testimonialStructure": {
        "required": ["quote", "name"],
        "optional": ["rating", "position", "company", "photo", "initials"]
      }
    },
    "contact-form": {
      "required": ["formAction"],
      "optional": ["sectionTitle", "sectionDescription", "fields", "submitText"],
      "defaults": {
        "sectionTitle": "Get In Touch",
        "sectionDescription": "We'd love to hear from you",
        "submitText": "Send Message",
        "fields": ["name", "email", "message"]
      }
    },
    "gallery": {
      "required": ["galleryItems"],
      "optional": ["sectionTitle", "sectionDescription", "columns", "showCaptions"],
      "defaults": {
        "sectionTitle": "Our Gallery",
        "columns": "md:grid-cols-3",
        "showCaptions": true
      },
      "galleryItemStructure": {
        "required": ["imageUrl", "imageAlt"],
        "optional": ["caption", "link"]
      }
    },
    "pricing-table": {
      "required": ["plans"],
      "optional": ["sectionTitle", "sectionDescription", "columns", "primaryColor"],
      "defaults": {
        "sectionTitle": "Choose Your Plan",
        "columns": "md:grid-cols-3",
        "primaryColor": "teal-600"
      },
      "planStructure": {
        "required": ["planName", "price", "period", "features"],
        "optional": ["isPopular", "ctaText", "ctaLink"]
      }
    },
    "product-grid": {
      "required": ["products"],
      "optional": ["sectionTitle", "sectionDescription", "columns", "showAddToCart"],
      "defaults": {
        "sectionTitle": "Our Products",
        "columns": "md:grid-cols-3 lg:grid-cols-4",
        "showAddToCart": true
      },
      "productStructure": {
        "required": ["productName", "productImage", "price"],
        "optional": ["description", "originalPrice", "discount", "inStock", "rating"]
      }
    },
    "appointment-form": {
      "required": ["formAction"],
      "optional": ["sectionTitle", "sectionDescription", "services", "fields"],
      "defaults": {
        "sectionTitle": "Book an Appointment",
        "fields": ["date", "time", "service", "name", "phone", "email"]
      }
    },
    "portfolio": {
      "required": ["projects"],
      "optional": ["sectionTitle", "sectionDescription", "columns", "showFilters"],
      "defaults": {
        "sectionTitle": "Our Portfolio",
        "columns": "md:grid-cols-2 lg:grid-cols-3",
        "showFilters": false
      },
      "projectStructure": {
        "required": ["projectName", "projectImage"],
        "optional": ["description", "category", "link", "date", "location"]
      }
    }
  },
  "imageGuidelines": {
    "source": "Unsplash",
    "format": "Use Unsplash URLs: https://images.unsplash.com/photo-[id]?w=800&h=600&fit=crop",
    "sizes": {
      "hero": "1920x1080",
      "card": "800x600",
      "thumbnail": "400x300",
      "gallery": "1200x800"
    },
    "categories": {
      "food": "food, restaurant, cuisine",
      "business": "business, office, professional",
      "beauty": "beauty, salon, spa",
      "fitness": "fitness, gym, workout",
      "medical": "medical, healthcare, clinic",
      "technology": "technology, tech, digital",
      "travel": "travel, vacation, destination",
      "real-estate": "real-estate, property, home",
      "education": "education, learning, school",
      "general": "business, professional, modern"
    }
  },
  "contentGuidelines": {
    "tone": {
      "professional": "Formal, trustworthy, corporate",
      "friendly": "Warm, approachable, conversational",
      "luxury": "Elegant, sophisticated, premium",
      "creative": "Bold, innovative, artistic",
      "medical": "Caring, professional, reassuring"
    },
    "length": {
      "heroTitle": "3-8 words",
      "heroSubtitle": "10-20 words",
      "sectionTitle": "2-5 words",
      "sectionDescription": "10-25 words",
      "featureDescription": "15-30 words",
      "testimonialQuote": "20-50 words"
    }
  }
}

