{
  "cssVariables": {
    "colors": {
      "primary": {
        "variable": "--color-primary",
        "default": "teal-600",
        "description": "Primary brand color",
        "usage": "buttons, links, accents"
      },
      "secondary": {
        "variable": "--color-secondary",
        "default": "blue-600",
        "description": "Secondary brand color",
        "usage": "highlights, secondary elements"
      },
      "accent": {
        "variable": "--color-accent",
        "default": "cyan-500",
        "description": "Accent color for emphasis",
        "usage": "hover states, special elements"
      },
      "background": {
        "variable": "--color-background",
        "default": "white",
        "description": "Main background color",
        "usage": "page background, card backgrounds"
      },
      "text": {
        "variable": "--color-text",
        "default": "gray-900",
        "description": "Primary text color",
        "usage": "headings, body text"
      },
      "text-muted": {
        "variable": "--color-text-muted",
        "default": "gray-600",
        "description": "Muted text color",
        "usage": "secondary text, captions"
      }
    },
    "typography": {
      "font-family-primary": {
        "variable": "--font-primary",
        "default": "sans-serif",
        "description": "Primary font family",
        "options": ["sans-serif", "serif", "monospace", "display"]
      },
      "font-size-base": {
        "variable": "--font-size-base",
        "default": "16px",
        "description": "Base font size",
        "options": ["14px", "16px", "18px"]
      },
      "font-weight-heading": {
        "variable": "--font-weight-heading",
        "default": "700",
        "description": "Font weight for headings",
        "options": ["600", "700", "800", "900"]
      },
      "line-height": {
        "variable": "--line-height",
        "default": "1.6",
        "description": "Line height for text",
        "options": ["1.5", "1.6", "1.75", "2"]
      }
    },
    "spacing": {
      "section-padding": {
        "variable": "--section-padding",
        "default": "5rem",
        "description": "Vertical padding for sections",
        "options": ["3rem", "4rem", "5rem", "6rem"]
      },
      "container-padding": {
        "variable": "--container-padding",
        "default": "1rem",
        "description": "Horizontal padding for containers",
        "options": ["0.5rem", "1rem", "1.5rem", "2rem"]
      },
      "element-gap": {
        "variable": "--element-gap",
        "default": "1.5rem",
        "description": "Gap between elements",
        "options": ["1rem", "1.5rem", "2rem", "3rem"]
      }
    },
    "borderRadius": {
      "button-radius": {
        "variable": "--radius-button",
        "default": "0.5rem",
        "description": "Border radius for buttons",
        "options": ["0.25rem", "0.5rem", "0.75rem", "1rem"]
      },
      "card-radius": {
        "variable": "--radius-card",
        "default": "0.75rem",
        "description": "Border radius for cards",
        "options": ["0.5rem", "0.75rem", "1rem", "1.5rem"]
      },
      "input-radius": {
        "variable": "--radius-input",
        "default": "0.5rem",
        "description": "Border radius for inputs",
        "options": ["0.25rem", "0.5rem", "0.75rem"]
      }
    },
    "shadows": {
      "shadow-sm": {
        "variable": "--shadow-sm",
        "default": "0 1px 2px rgba(0,0,0,0.05)",
        "description": "Small shadow",
        "usage": "subtle elevation"
      },
      "shadow-md": {
        "variable": "--shadow-md",
        "default": "0 4px 6px rgba(0,0,0,0.1)",
        "description": "Medium shadow",
        "usage": "cards, buttons"
      },
      "shadow-lg": {
        "variable": "--shadow-lg",
        "default": "0 10px 15px rgba(0,0,0,0.1)",
        "description": "Large shadow",
        "usage": "modals, elevated cards"
      },
      "shadow-xl": {
        "variable": "--shadow-xl",
        "default": "0 20px 25px rgba(0,0,0,0.15)",
        "description": "Extra large shadow",
        "usage": "hero sections, prominent elements"
      }
    },
    "animations": {
      "transition-speed": {
        "variable": "--transition-speed",
        "default": "300ms",
        "description": "Default transition speed",
        "options": ["200ms", "300ms", "400ms", "500ms"]
      },
      "hover-scale": {
        "variable": "--hover-scale",
        "default": "1.05",
        "description": "Scale factor on hover",
        "options": ["1.02", "1.05", "1.1"]
      },
      "hover-opacity": {
        "variable": "--hover-opacity",
        "default": "0.8",
        "description": "Opacity on hover",
        "options": ["0.7", "0.8", "0.9"]
      }
    },
    "breakpoints": {
      "mobile": {
        "variable": "--breakpoint-mobile",
        "default": "640px",
        "description": "Mobile breakpoint"
      },
      "tablet": {
        "variable": "--breakpoint-tablet",
        "default": "768px",
        "description": "Tablet breakpoint"
      },
      "desktop": {
        "variable": "--breakpoint-desktop",
        "default": "1024px",
        "description": "Desktop breakpoint"
      },
      "wide": {
        "variable": "--breakpoint-wide",
        "default": "1280px",
        "description": "Wide screen breakpoint"
      }
    }
  },
  "tailwindConfig": {
    "theme": {
      "extend": {
        "colors": {
          "primary": "var(--color-primary)",
          "secondary": "var(--color-secondary)",
          "accent": "var(--color-accent)"
        },
        "fontFamily": {
          "primary": "var(--font-primary)"
        },
        "spacing": {
          "section": "var(--section-padding)",
          "container": "var(--container-padding)"
        },
        "borderRadius": {
          "button": "var(--radius-button)",
          "card": "var(--radius-card)"
        }
      }
    }
  }
}

